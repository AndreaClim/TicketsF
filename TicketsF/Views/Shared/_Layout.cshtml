<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tickets1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tickets1.styles.css" asp-append-version="true" />
    <style>
        /* Fondo negro para todo el body */
        body {
            background-color: #121212; /* Fondo negro */
            color: #e0e0e0; /* Texto blanco */
            padding-bottom: 80px;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #1a1a1a;
            color: #aaa;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <!-- Aquí puedes agregar un encabezado si lo necesitas -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Esto renderiza el contenido de la vista principal -->
        </main>
    </div>

    <!-- Footer -->
    <footer>
        © 2025 TechSoluciones - Tu aliado en tecnología empresarial
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
