@model TicketsF.Models.DashboardData

@{
    ViewData["Title"] = "Panel de Empleado - TechSoluciones";
    Layout = "_Layout - Copia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            padding-bottom: 80px;
        }

        .form-control {
            background-color: #363636;
            border: none;
            color: #e0e0e0;
        }

            .form-control:focus {
                background-color: #1f1f1f;
                color: #fff;
                box-shadow: 0 0 0 0.25rem rgba(75, 102, 138, 0.5);
            }

        .form-label {
            color: #ffffff;
        }

        .btn-custom {
            background-color: #4b668a;
            color: white;
        }

            .btn-custom:hover {
                background-color: #3a526f;
            }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #1a1a1a;
            color: #aaa;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
        }

        /* NAVBAR full width y color */
        .navbar {
            width: 100%;
            background-color: #1f1f1f !important;
            border-bottom: 1px solid #333;
        }

            .navbar .navbar-brand {
                color: #e0e0e0;
                font-weight: bold;
            }

                .navbar .navbar-brand:hover {
                    color: #ffffff;
                }

        .btn-login {
            color: #e0e0e0;
            text-decoration: none;
            font-weight: 500;
        }

            .btn-login:hover {
                color: #ffffff;
            }

        /* TABS */
        .nav-tabs .nav-link {
            color: #ccc;
            background-color: #2a2a2a;
            border: 1px solid transparent;
            margin-right: 5px;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .nav-tabs .nav-link:hover {
                background-color: #3b3b3b;
                color: #fff;
            }

            .nav-tabs .nav-link.active {
                background-color: #4b668a;
                color: white;
                border-color: transparent;
                font-weight: bold;
                border-bottom: none;
            }

        .tab-content {
            border-top: none;
        }

        .nav-tabs {
            border-bottom: none !important;
        }

        table {
            width: 100%;
        }

        th, td {
            padding: 15px;
        }

    </style>
</head>
<body>

    <!-- Tabs -->
    <div class="container mt-4 mb-5">
        <ul class="nav nav-tabs" id="empleadoTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="dashboard-tab" data-bs-toggle="tab" data-bs-target="#dashboard" type="button" role="tab">Dashboard</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="clientes-tab" data-bs-toggle="tab" data-bs-target="#clientes" type="button" role="tab">Clientes</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">Tickets</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="usuarios-tab" data-bs-toggle="tab" data-bs-target="#usuarios" type="button" role="tab">Usuarios</button>
            </li>
        </ul>

        <div class="tab-content bg-dark p-4 rounded-bottom text-white" id="empleadoTabsContent">
            <!-- DASHBOARD -->
            <div class="tab-pane fade show active" id="dashboard" role="tabpanel">
                <h4 class="mb-4">Dashboard</h4>
                <div class="row text-center mb-4">
                    <div class="col-md-4">
                        <div class="card bg-success text-white shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Tickets Resueltos</h5>
                                <p>@Model.TicketsResueltos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning text-dark shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">En Progreso</h5>
                                <p>@Model.TicketsEnProgreso</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-danger text-white shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Tickets Abiertos</h5>
                                <p>@Model.TicketsAbiertos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CLIENTES -->
            <div class="tab-pane fade" id="clientes" role="tabpanel">
                <h4>Gestión de Clientes</h4>
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model.Clientes)
                        {
                            <tr>
                                <td>@cliente.nombre</td>
                                <td>@cliente.correo</td>
                                <td>@cliente.telefono</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editCliente(@cliente.id_usuario)">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteCliente(@cliente.id_usuario)">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- TICKETS -->
            <div class="tab-pane fade" id="tickets" role="tabpanel">
                <h4 class="mb-4">Tickets Activos</h4>
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Descripción</th>
                            <th>Prioridad</th>
                            <th>Estado</th>
                            <th>Asignado a</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr id="ticket-row-@ticket.id_ticket">
                                <td>@ticket.id_ticket</td>
                                <td>@ticket.usuarioC.nombre</td>
                                <td>@ticket.descripcion</td>
                                <td>
                                    <select class="form-select" id="prioridad_@ticket.id_ticket">
                                        @foreach (var prioridad in Model.Prioridades)
                                        {
                                            <option value="@prioridad.id_prioridad" selected="@((ticket.id_prioridad == prioridad.id_prioridad) ? "selected" : "")">@prioridad.nombre</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select" id="estado_@ticket.id_ticket">
                                        @foreach (var estado in Model.Estado)
                                        {
                                            <option value="@estado.id_estado" selected="@((ticket.id_estado == estado.id_estado) ? "selected" : "")">@estado.nombre</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select" id="usuarioE_@ticket.id_ticket">
                                        @foreach (var usuario in Model.Usuarios.Where(u => u.roles != "Cliente"))
                                        {
                                            <option value="@usuario.id_usuario" selected="@((ticket.id_usuarioE == usuario.id_usuario) ? "selected" : "")">@usuario.nombre</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editTicket(@ticket.id_ticket)">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteTicket(@ticket.id_ticket)">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                    <button class="btn btn-sm btn-success" onclick="resolverTicket(@ticket.id_ticket)">
                                        <i class="fas fa-check"></i> 
                                    </button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <!-- USUARIOS -->
            <div class="tab-pane fade" id="usuarios" role="tabpanel">
                <h4>Administración de Usuarios</h4>
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Autenticación</th>
                            <th>Roles</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr>
                                <td>@usuario.nombre</td>
                                <td>@usuario.correo</td>
                                <td>@usuario.telefono</td>
                                <td>@usuario.autenticacion</td>
                                <td>@usuario.roles</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editUsuario(@usuario.id_usuario)">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteUsuario(@usuario.id_usuario)">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
                    function resolverTicket(id) {
            var idUsuarioAsignado = document.getElementById('usuarioE_' + id).value;
            var idPrioridad = document.getElementById('prioridad_' + id).value;
            var idEstado = document.getElementById('estado_' + id).value;

            // Realizamos la solicitud AJAX para resolver el ticket
            $.ajax({
                url: '/Dashboard/ResolverTicket',  // Ruta de la acción en el controlador
                type: 'GET',
                data: {
                    id: id,
                    idUsuarioAsignado: idUsuarioAsignado,
                    idPrioridad: idPrioridad,
                    idEstado: idEstado
                },
                success: function(response) {
                    // Eliminar la fila del ticket del frontend
                    $('#ticket-row-' + id).remove();

                    // Actualizar el Dashboard con los datos más recientes
                    $('#dashboard-content').html(response);  // Suponiendo que tu contenedor tiene id="dashboard-content"
                },
                error: function(error) {
                    console.log("Error al resolver el ticket:", error);
                }
            });
        }


        // Función para actualizar el Dashboard (si es necesario)
        function updateDashboard() {
            $.ajax({
                url: '/Dashboard/Index',
                type: 'GET',
                success: function(response) {
                    // Actualizar la vista del Dashboard con los nuevos datos
                    $('#dashboard-content').html(response);
                },
                error: function(error) {
                    console.log("Error al actualizar el dashboard:", error);
                }
            });
        }


        function deleteTicket(id) {
            if (confirm("¿Estás seguro de que quieres eliminar este ticket?")) {
                window.location.href = '/Dashboard/EliminarTicket/' + id;
            }
        }

        function deleteUsuario(id) {
            if (confirm("¿Estás seguro de que quieres eliminar este usuario?")) {
                window.location.href = '/Dashboard/EliminarUsuario/' + id;
            }
        }

        function deleteCliente(id) {
            if (confirm("¿Estás seguro de que quieres eliminar este cliente?")) {
                window.location.href = '/Dashboard/EliminarCliente/' + id;
            }
        }
    </script>

</body>
</html>
